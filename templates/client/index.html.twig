{% extends 'base.html.twig' %}

{% block title %}Liste des clients{% endblock %}

{% block body %}
  <div class="flex flex-col md:flex-row">
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
      <div class="p-4 flex items-center h-32 logo">
        <svg class="w-20 h-20 mr-2" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect width="40" height="24" rx="4" fill="white" />
          <path
            d="M17 8H7C5.89543 8 5 8.89543 5 10V16C5 17.1046 5.89543 18 7 18H17C18.1046 18 19 17.1046 19 16V10C19 8.89543 18.1046 8 17 8Z"
            stroke="#1E40AF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
          <path
            d="M12 12C12.5523 12 13 11.5523 13 11C13 10.4477 12.5523 10 12 10C11.4477 10 11 10.4477 11 11C11 11.5523 11.4477 12 12 12Z"
            stroke="#1E40AF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
          <path d="M16 16H8" stroke="#1E40AF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
        <div class="flex flex-col text-white font-bold text-xl">
          <span>GESTION</span>
          <span>BOUTIQUE</span>
        </div>
      </div>
      <a class="block px-4 py-2 mt-2 text-sm font-semibold text-white hover:bg-gray-600"
        href="../SuperAdmin/dashboard.html"><i class="fas fa-tachometer-alt text-lg mr-3"></i> Dashboard</a>
      <a class="block px-4 py-2 mt-2 text-sm font-semibold text-white hover:bg-gray-600"
        href="sidebard.html"><i class="fas fa-dollar-sign text-lg mr-3"></i> Dettes
      </a>
      <a class="block px-4 py-2 mt-2 text-sm font-semibold text-white hover:bg-gray-600"
        href="searchClient.html"><i class="fas fa-users text-lg mr-3"></i> Clients
      </a>
      <a class="block px-4 py-2 mt-2 text-sm font-semibold text-white hover:bg-gray-600"
        href="articles.html"><i class="fas fa-box text-lg mr-3"></i> Articles
      </a>
      <a class="block px-4 py-2 mt-2 text-sm font-semibold text-white hover:bg-gray-600"
        href="demandes.html"><i class="fas fa-envelope text-lg mr-3"></i> Demandes
      </a>
      <a class="block px-4 py-2 mt-2 text-sm font-semibold text-white hover:bg-gray-600"
        href="../SuperAdmin/ecranAdmin.html"><i class="fas fa-user text-lg mr-3"></i> Utilisateurs
      </a>
    </div>
    <!-- Contenu principal -->
    <div class="content">
      <header class="flex flex-col sm:flex-row justify-between items-center bg-white shadow-md px-4 py-2 header ml-5">
        <div class="p-4 flex items-center h-32 md:hidden">
          <svg class="w-20 h-20 mr-2" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect width="40" height="24" rx="4" fill="white" />
            <path
              d="M17 8H7C5.89543 8 5 8.89543 5 10V16C5 17.1046 5.89543 18 7 18H17C18.1046 18 19 17.1046 19 16V10C19 8.89543 18.1046 8 17 8Z"
              stroke="#1E40AF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            <path
              d="M12 12C12.5523 12 13 11.5523 13 11C13 10.4477 12.5523 10 12 10C11.4477 10 11 10.4477 11 11C11 11.5523 11.4477 12 12 12Z"
              stroke="#1E40AF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            <path d="M16 16H8" stroke="#1E40AF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
          <div class="flex flex-col text-gray-800 font-bold text-xl">
            <span>GESTION</span>
            <span>BOUTIQUE</span>
          </div>
        </div>
        <!-- Barre de recherche globale -->
        <div class="search-bar flex items-center w-full sm:w-1/2 lg:w-3/5 mb-2 sm:mb-0">
          <input type="text" placeholder="Rechercher dans votre boutique..."
            class="w-full px-4 py-2 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all text-sm sm:text-base" />
        </div>

        <!-- Informations utilisateur -->
        <button class="header-user flex items-center mt-2 sm:mt-0" data-popover-target="popover-bottom"
          data-popover-placement="bottom" type="button" data-popover-trigger="click">
          <img src="https://images.unsplash.com/photo-1499714608240-22fc6ad53fb2" alt="Photo Utilisateur"
            class="w-10 h-10 sm:w-12 sm:h-12 rounded-full border-2 border-blue-500" />
          <div class="pl-2 sm:pl-4 py-1 ml-2">
            <p class="text-gray-700 text-xs sm:text-sm font-semibold">
              OUSSEYNOU
            </p>
            <p class="text-gray-700 text-xs sm:text-sm font-semibold">
              DIEDHIOU
            </p>
          </div>
        </button>

        <!-- Popover pour les informations utilisateur (inchangé) -->
        <div data-popover id="popover-bottom" role="tooltip"
          class="absolute right-2 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-10 invisible" style="top: 3rem">
          <div class="px-4 py-2 text-center">
            <img class="w-16 h-16 rounded-full mx-auto"
              src="https://images.unsplash.com/photo-1499714608240-22fc6ad53fb2" alt="User avatar" />
            <p class="mt-2 font-semibold">OUSSEYNOU DIEDHIOU</p>
          </div>
          <a href="../Client/profile.html"
            class="block px-4 py-2 text-sm text-center text-gray-700 hover:bg-gray-100">MODIFIER</a>
          <a href="../auth/login.html"
            class="block px-4 py-2 text-sm text-center text-gray-700 hover:bg-gray-100">DECONNEXION</a>
        </div>
      </header>
      <main class="mt-8 mx-4 md:mr-8 rounded-xl bg-white p-4 shadow-sm flex flex-col main-content">
        <div class="product-lists">
          <div class="product-list bg-white rounded-lg shadow p-4 w-full">
            <div class="mb-4 text-xl font-bold text-black">
              Lister les clients
            </div>
            <!-- Header -->

            <!-- Filter and New Client Button -->
            <div class="flex flex-wrap justify-between items-center mb-4">
              <!-- Filter by Phone -->
              <div class="flex items-center space-x-2">
                <input type="text" placeholder="Filtrer par telephone"
                  class="p-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:outline-none w-full" />
                <button class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                  Valider
                </button>
              </div>
              <!-- New Client Button -->
              <div class="flex gap-4">
                <button data-modal-target="clientModal" data-modal-toggle="clientModal"
                  class="px-4 py-2 bg-blue-600 text-white rounded-md shadow hover:bg-blue-700 mt-2 sm:mt-0">
                  Nouveau client
                </button>
              </div>
            </div>
            <div class="overflow-x-auto">
              <table class="min-w-full">
                <thead class="bg-blue-600 text-white">
                  <tr>
                    <th class="px-6 py-3 text-left">NOM COMPLET</th>
                    <th class="px-6 py-3 text-left">TELEPHONE</th>
                    <th class="px-6 py-3 text-left">ADRESSE</th>
                    <th class="px-6 py-3 text-left">MONTANT DUE</th>
                    <th class="px-6 py-3 text-left">ACTION</th>
                  </tr>
                </thead>
                <tbody class="text-gray-700">
                  <!-- Row 1 -->
                  <tr class="border-t">
                    <td class="px-6 py-4">Ibrahima Diallo</td>
                    <td class="px-6 py-4">785619115</td>
                    <td class="px-6 py-4">Dakar, Senegal</td>
                    <td class="px-6 py-4">5000 FCFA</td>
                    <td class="px-6 py-4">
                      <a href="listDettesClient.html"><button
                          class="px-4 py-2 bg-blue-500 text-white rounded-md shadow hover:bg-blue-600">
                          Détails
                        </button></a>
                    </td>
                  </tr>
                  <!-- Row 2 -->
                  <tr class="border-t">
                    <td class="px-6 py-4">Amina Ndiaye</td>
                    <td class="px-6 py-4">785619115</td>
                    <td class="px-6 py-4">Thiès, Senegal</td>
                    <td class="px-6 py-4">15.000 FCFA</td>
                    <td class="px-6 py-4">
                      <a href="listDettesClient.html"><button
                          class="px-4 py-2 bg-blue-500 text-white rounded-md shadow hover:bg-blue-600">
                          Détails
                        </button></a>
                    </td>
                  </tr>
                  <!-- Row 3 -->
                  <tr class="border-t">
                    <td class="px-6 py-4">Moussa Fall</td>
                    <td class="px-6 py-4">785619115</td>
                    <td class="px-6 py-4">Saint-Louis, Senegal</td>
                    <td class="px-6 py-4">10.000 FCFA</td>
                    <td class="px-6 py-4">
                      <a href="listDettesClient.html"><button
                          class="px-4 py-2 bg-blue-500 text-white rounded-md shadow hover:bg-blue-600">
                          Détails
                        </button></a>
                    </td>
                  </tr>
                  <!-- Row 4 -->
                  <tr class="border-t">
                    <td class="px-6 py-4">Fatou Diop</td>
                    <td class="px-6 py-4">785619115</td>
                    <td class="px-6 py-4">Kaolack, Senegal</td>
                    <td class="px-6 py-4">10.000 FCFA</td>
                    <td class="px-6 py-4">
                      <a href="listDettesClient.html"><button
                          class="px-4 py-2 bg-blue-500 text-white rounded-md shadow hover:bg-blue-600">
                          Détails
                        </button></a>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
            <div class="flex justify-end mt-4 mb-2 sm:mb-0 space-x-2">
              <button class="px-3 py-1 bg-gray-300 rounded-md shadow hover:bg-gray-400">
                &lt;
              </button>
              <button class="px-3 py-1 bg-blue-500 text-white rounded-md shadow hover:bg-blue-600">
                1
              </button>
              <button class="px-3 py-1 bg-gray-300 rounded-md shadow hover:bg-gray-400">
                2
              </button>
              <button class="px-3 py-1 bg-gray-300 rounded-md shadow hover:bg-gray-400">
                &gt;
              </button>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
{% endblock %}
